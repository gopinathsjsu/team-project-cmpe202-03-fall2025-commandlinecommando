                  "    var authToken = pm.environment.get('auth_token');",
                  "    if (!authToken) {",
                  "        console.error('❌ auth_token is missing from environment!');",
                  "    } else {",
                  "        console.error('Token being used:', authToken.substring(0, 30) + '...');",
                  "        // Check if Authorization header was sent",
                  "        var authHeader = pm.request.headers.get('Authorization');",
                  "        if (!authHeader) {",
                  "            console.error('❌ Authorization header is missing from request!');",
                  "        } else {",
