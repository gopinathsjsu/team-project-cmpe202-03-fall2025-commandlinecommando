              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Debug: Check if auth_token is set",
                  "var authToken = pm.environment.get('auth_token');",
                  "if (!authToken) {",
                  "    console.error('❌ ERROR: auth_token is not set in environment!');",
                  "    console.error('Please run Login or Register Test User first.');",
                  "} else {",
                  "    console.log('✅ auth_token found:', authToken.substring(0, 20) + '...');",
                  "    // Check token expiration (basic check)",
                  "    try {",
                  "        var tokenParts = authToken.split('.');",
                  "        if (tokenParts.length === 3) {",
                  "            var payload = JSON.parse(atob(tokenParts[1]));",
                  "            var exp = payload.exp * 1000; // Convert to milliseconds",
                  "            var now = Date.now();",
                  "            if (exp < now) {",
                  "                console.error('❌ Token is EXPIRED! Expired at:', new Date(exp));",
                  "                console.error('Please login again to get a new token.');",
                  "            } else {",
                  "                console.log('✅ Token is valid until:', new Date(exp));",
                  "                console.log('✅ Token username:', payload.sub);",
                  "            }",
                  "        }",
                  "    } catch (e) {",
                  "        console.warn('⚠️ Could not parse token:', e.message);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
