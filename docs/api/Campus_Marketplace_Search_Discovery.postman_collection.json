{
  "info": {
    "name": "Campus Marketplace - Search & Discovery",
    "description": "Complete API collection for Epic 3: Search and Discovery features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "campus-marketplace-search-v1",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "listing_api_url",
      "value": "http://localhost:8100",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.token);",
                  "    pm.environment.set('user_id', jsonData.userId);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Basic Search",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has results', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('results');",
                  "    pm.expect(jsonData.results).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Search completes in < 200ms', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.metadata.searchTimeMs).to.be.below(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"laptop\",\n  \"page\": 0,\n  \"size\": 20,\n  \"sortBy\": \"relevance\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Search with Category Filter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"textbook\",\n  \"categories\": [\"TEXTBOOKS\", \"BOOKS\"],\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Search with Price Range",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"laptop\",\n  \"minPrice\": 500.00,\n  \"maxPrice\": 1500.00,\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Search with Multiple Filters",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"electronics\",\n  \"categories\": [\"ELECTRONICS\"],\n  \"conditions\": [\"NEW\", \"LIKE_NEW\"],\n  \"minPrice\": 100.00,\n  \"maxPrice\": 1000.00,\n  \"location\": \"San Jose\",\n  \"sortBy\": \"price_asc\",\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Search - Sort by Price (Low to High)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categories\": [\"ELECTRONICS\"],\n  \"sortBy\": \"price_asc\",\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Search - Sort by Date (Newest)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sortBy\": \"date_desc\",\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/search",
              "host": ["{{base_url}}"],
              "path": ["search"]
            }
          }
        },
        {
          "name": "Autocomplete",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/search/autocomplete?q=lap",
              "host": ["{{base_url}}"],
              "path": ["search", "autocomplete"],
              "query": [
                {
                  "key": "q",
                  "value": "lap"
                }
              ]
            }
          }
        },
        {
          "name": "Search History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/search/history",
              "host": ["{{base_url}}"],
              "path": ["search", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Discovery",
      "item": [
        {
          "name": "Trending Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/discovery/trending?limit=10",
              "host": ["{{base_url}}"],
              "path": ["discovery", "trending"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Recommended Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/discovery/recommended?limit=10",
              "host": ["{{base_url}}"],
              "path": ["discovery", "recommended"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Similar Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/discovery/similar/:productId?limit=10",
              "host": ["{{base_url}}"],
              "path": ["discovery", "similar", ":productId"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ],
              "variable": [
                {
                  "key": "productId",
                  "value": "REPLACE_WITH_PRODUCT_UUID"
                }
              ]
            }
          }
        },
        {
          "name": "Recently Viewed",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/discovery/recently-viewed?limit=20",
              "host": ["{{base_url}}"],
              "path": ["discovery", "recently-viewed"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Listing-API Proxy (Backward Compatibility)",
      "item": [
        {
          "name": "Enhanced Search v2 (Proxy)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"laptop\",\n  \"categories\": [\"ELECTRONICS\"],\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{listing_api_url}}/listings/search/v2",
              "host": ["{{listing_api_url}}"],
              "path": ["listings", "search", "v2"]
            }
          }
        },
        {
          "name": "Autocomplete (Proxy)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{listing_api_url}}/listings/search/autocomplete?q=lap",
              "host": ["{{listing_api_url}}"],
              "path": ["listings", "search", "autocomplete"],
              "query": [
                {
                  "key": "q",
                  "value": "lap"
                }
              ]
            }
          }
        },
        {
          "name": "Trending (Proxy)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{listing_api_url}}/listings/discovery/trending?limit=10",
              "host": ["{{listing_api_url}}"],
              "path": ["listings", "discovery", "trending"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

