# ==============================================
# Campus Marketplace Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control!

# ==============================================
# Database Configuration (Required)
# ==============================================
DB_APP_USER=cm_app_user
DB_APP_PASSWORD=changeme
DB_PORT=5432

# ==============================================
# JWT Configuration (Required - Change in Production!)
# ==============================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=9775e9d9fbc257c6990d59a75430a81c2f9ed364e65ec2da8b927bab5444394d
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ==============================================
# AWS Configuration (Required for image uploads)
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-west-1
AWS_S3_BUCKET_NAME=webapp-s3-bucket-2025

# ==============================================
# Email Configuration (SendGrid - Optional)
# ==============================================
EMAIL_NOTIFICATIONS_ENABLED=true
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=commandline-commandos@seasonsanta.com

# ==============================================
# OpenAI Configuration (Optional - for AI features)
# ==============================================
OPENAI_API_KEY=your-openai-api-key

# ==============================================
# Port Configuration
# ==============================================
FRONTEND_PORT=80
BACKEND_PORT=8080
AI_SERVICE_PORT=3001
REDIS_PORT=6379

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN

# ==============================================
# File Upload Configuration
# ==============================================
FILE_UPLOAD_MAX_SIZE=10485760

