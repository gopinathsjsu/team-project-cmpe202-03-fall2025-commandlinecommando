# Campus Marketplace Database Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration
DB_ROOT_PASSWORD=postgres_admin_2024!
DB_HOST=localhost
DB_PORT=5432
DB_NAME=campus_marketplace

# Application Database User (Read/Write/Admin permissions)
DB_APP_USER=cm_app_user
DB_APP_PASSWORD=CampusApp2024!SecurePass

# Read-only Database User (Analytics/Reporting)
DB_READONLY_USER=cm_readonly
DB_READONLY_PASSWORD=CampusRead2024!SecurePass

# pgAdmin Configuration
PGADMIN_EMAIL=admin@campusmarketplace.com
PGADMIN_PASSWORD=pgadmin_2024!

# Redis Configuration (Optional)
REDIS_PASSWORD=redis_2024!

# JWT Configuration
JWT_SECRET=myVerySecureSecretKeyForJWTTokensThatShouldBeAtLeast256BitsLongForHS256AlgorithmUpdated2024
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# SSL Configuration (disable for development, require for production)
SSL_MODE=disable
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Backup Configuration
BACKUP_RETENTION_DAYS=7
REMOTE_BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=campus-marketplace-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO